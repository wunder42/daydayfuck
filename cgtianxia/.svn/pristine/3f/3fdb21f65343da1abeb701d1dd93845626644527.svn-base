{% extends 'base.htm' %}
{% load filters %}

{% block content %}
<div class="container" style="border:1px solid #D4D4D4; margin-bottom: 10px">
	<span class="label label-success" style="margin-top: 5px; margin-left: 20px;">上一篇:
		{% if dy_focus_pre %}
		<a href="/dyhome/focus/{{dy_focus_pre.id}}" style="color:black">{{dy_focus_pre.title|dytruncate:"15"}}</a>
		{% else %}
		<span style="color:black">没有了</span>
		{% endif %}
	</span> 
	<span class="label label-success">下一篇:
		{% if dy_focus_next %}
			<a href="/dyhome/focus/{{dy_focus_next.id}}" style="color:black">{{dy_focus_next.title|dytruncate:"15"}}</a>
		{% else %}
			<span style="color:black">没有了</span>
		{% endif %}
	</span>
	<hr style="margin-top: 5px;" />
	<div>
		<div class="span8" style="margin-left: 0px;">
			<div class="well" style="padding:0px; margin-left: 20px">
				<h5 class="span8 text-center" style="margin-left: 0px;"> {{dy_focus.title}} </h5>
				<!-- <p class="span8 text-center" style="width:618px; margin-left:0px;margin-right: 0px; border-bottom: 2px solid #7D9EC0; padding-left:20px;"> <span class="label label-success">{{dy_focus.author}}</span>&nbsp&nbsp发布于&nbsp&nbsp{{dy_focus.publication_date|date:"y-m-d h:m:s"}}&nbsp&nbsp|&nbsp&nbsp{{dy_focus.hot_dot}}次阅读</p> -->
				<p class="span8" style="margin:10px;">{{dy_focus.content|safe}}</p>
			</div>
		</div>
	</div>

	<span class="span4">
		<div class="span3 well">			
			<ul class="nav nav-list">
			  <li class="nav-header"><h4 class="h4_title"> 热门头条 </h4> </li>
			  {% for news in hot_dy_focus_list %}
					{% ifequal forloop.counter 1 %}
					<li><a href="/dyhome/focus/{{news.id}}" title="{{news.title}}"><span class="label label-success">1</span>&nbsp&nbsp{{ news.title|dytruncate:"13" }}</a></li>
					{% else %}
					{% ifequal forloop.counter 2 %}
					<li><a href="/dyhome/focus/{{news.id}}" title="{{news.title}}"><span class="label label-success">2</span>&nbsp&nbsp{{ news.title|dytruncate:"13" }}</a></li>
					{% else %}
					{% ifequal forloop.counter 3 %}
					<li><a href="/dyhome/focus/{{news.id}}" title="{{news.title}}"><span class="label label-success">3</span>&nbsp&nbsp{{ news.title|dytruncate:"13" }}</a></li>
					{% else %}
					<li><a href="/dyhome/focus/{{news.id}}" title="{{news.title}}"><span class="label">{{forloop.counter}}</span>&nbsp&nbsp{{ news.title|dytruncate:"13" }}</a></li>
					{% endifequal %}
					{% endifequal %}
					{% endifequal %}
				{% endfor %}
			</ul>
		</div>
	</span>
</div>	
{% endblock %}